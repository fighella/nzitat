<%= @event.title %>

<%= @event.event_start %>

<% @event.subscriptions.map(&:user).uniq.each do |user| %>
  <%= user.email %>
<% end %>

<%= semantic_form_for [@event, @subscription] do |f| %>

  <%= f.input :email %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>

<% end %>
