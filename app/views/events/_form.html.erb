<div class="row">

<%= simple_form_for @event, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="span4">
  <%= f.input :title, :label => false %>

</div>
<div class="span4">

  <%= f.input :date, :as => :string, :input_html => { :class => 'datepicker'}  %>

  <%= f.input :time, :as => :string %>
</div>
  <%= f.button :submit, :class => "btn-info btn-large"  %>

<% end %>
</div>
